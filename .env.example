# Prosora Sports Analytics Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# Football Data API
FOOTBALL_DATA_API_KEY=5722a0f62b6b4d27814dbd94239744b9
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Database Configuration (if using direct PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/prosora_sports

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Paths (relative to project root)
AIFOOTBALL_MODEL_PATH=./AIFootballPredictions/models
EPL_MODEL_PATH=./EPL-Predictor

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
CACHE_TTL=300

# External Services
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your_webhook_secret

# Development/Production
ENVIRONMENT=development
DEBUG=true